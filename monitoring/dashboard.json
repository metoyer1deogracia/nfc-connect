{
  "title": "NFC Connect Dashboard",
  "description": "Dashboard principal de monitoring NFC Connect",
  "widgets": [
    {
      "definition": {
        "type": "group",
        "layout_type": "ordered",
        "title": "Performance Application",
        "widgets": [
          {
            "definition": {
              "title": "Temps de réponse API",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:trace.http.request{service:nfc-connect}"
                }
              ]
            }
          },
          {
            "definition": {
              "title": "Transferts NFC",
              "type": "timeseries",
              "requests": [
                {
                  "q": "sum:nfc.transfer.count{*}"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "definition": {
        "type": "group",
        "layout_type": "ordered",
        "title": "Infrastructure",
        "widgets": [
          {
            "definition": {
              "title": "CPU Usage",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:system.cpu.user{service:nfc-connect}"
                }
              ]
            }
          },
          {
            "definition": {
              "title": "Mémoire",
              "type": "timeseries",
              "requests": [
                {
                  "q": "avg:system.mem.used{service:nfc-connect}"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
